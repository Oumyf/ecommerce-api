{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "Professional E-commerce API with Node.js, Express, and MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll",
    "test:ci": "jest",
    "docker:build": "docker build -t ecommerce-api .",
    "docker:run": "docker run -p 3000:3000 ecommerce-api",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f api"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "ecommerce",
    "api",
    "docker",
    "rest",
    "backend"
  ],
  "author": "Oumy - Backend Developer",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
